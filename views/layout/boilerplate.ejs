<style>
body::-webkit-scrollbar {
  width: 12px;               /* width of the entire scrollbar */
}

body::-webkit-scrollbar-track {
  background: whitesmoke;        /* color of the tracking area */
}

body::-webkit-scrollbar-thumb {
  background-color: hsl(171, 100%, 41%);    /* color of the scroll thumb */
  border-radius: 20px;       /* roundness of the scroll thumb */
  border: 3px solid whitesmoke;  /* creates padding around scroll thumb */
}
*{
    box-sizing: border-box;
}

body{
    background-color: #333;
    color:#222;
    font-family: 'Lato', sans-serif;
    margin: 0;
    overflow-x:hidden;
}
#antinavcontainer{
    transform-origin: top left;
    transition:transform 0.5s linear;
}
#antinavcontainer.show-nav{
  transform: rotate(-20deg);
}
#undernav{
  position: fixed;
    bottom:40px;
    left: 0px;
}
#undernav ul{
  list-style-type: none;
  padding-left: 30px;
  padding-bottom: 10px;
}
#undernav ul li{
  text-transform: uppercase;
  color:#FFC107;
  margin:10px 0;
  transform: translateX(-110%);
  transition: transform 0.4s ease;
}
#undernav ul li a i{
  font-size: 20px;
  margin-right: 10px;
  
}
#undernav ul li+li{
  margin-left: 15px;
  transform: translateX(-160%);
}
#undernav ul li+li+li{
  margin-left: 30px;
  transform: translateX(-210%);
}
#undernav ul li+li+li+li{
  margin-left: 45px;
  transform: translateX(-210%);
}
#antinavcontainer.show-nav + #undernav li{
  transform: translateX(0);
  transition-delay: 0.3s;
}
#anchor{
  text-decoration-line: none;
  color: hsl(171, 100%, 41%);
}
</style>
