<style>
    @media(max-width:1200px){
        #errstack{
            display: none;
        }
    }
    #alert{
        border-radius: 30px;
    }
</style>
<% layout('layout/boilerplate')%>
<div class="row p-3">
    <div class="col-6 offset-3 ">
        <div class="alert alert-danger shadow-lg" id="alert" role="alert">
            
            <h4 class="alert-heading"><%=err.message%></h4>
            <hr>
            <% if(process.env.NODE_ENV !== "production"){ %> 
            <p id="errstack"><%= err.stack %></p>
            <% } %> 
        </div>
    </div>
</div>